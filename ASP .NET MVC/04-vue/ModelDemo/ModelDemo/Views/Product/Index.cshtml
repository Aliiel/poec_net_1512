@model List<Produit>
@{
    ViewData["Title"] = "Liste des produits";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prix</th>
            <th>Stock</th>
        </tr>
    </thead>
    @foreach (var produit in Model)
    {
        <tr>
            <td>@produit.Id</td>
            <td>@produit.Nom</td>
            <td>@produit.PriceFormatted</td>
            <td>@produit.Stock</td>
        </tr>
    }

</table>



