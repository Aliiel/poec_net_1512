@{
    ViewData["Title"] = "La page IF ELSE ici";

    var isConnecte = true;
    var stock = 84;
}

@if(isConnecte)
{
    <p>Bienvenue, vous êtes connecté !</p> // s'affiche que si la condition est vraie
} 

@if(stock > 0)
{
    <span class="badge bg-success">En stock</span>
}
else
{
    <span class="badge bg-danger">Rupture de stock</span>
}