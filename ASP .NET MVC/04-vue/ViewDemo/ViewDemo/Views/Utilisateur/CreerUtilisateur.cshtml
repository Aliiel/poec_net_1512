@model Utilisateur

@{
    ViewData["Title"] = "Créer un utilisateur";

}

<h1>@ViewData["Title"]</h1>

<form asp-controller="Utilisateur" asp-action="CreerUtilisateur" method="post">
    <div>
        <label asp-for="Nom" class="form-label"></label>
        <input asp-for="Nom" class="form-control"/>
    </div>

    @* Liste déroulante | asp-items="ViewBag.pays" => *@
    <div>
        <label asp-for="CodePays" class="form-label">Code du pays :</label>
        <select asp-for="CodePays" asp-items="ViewBag.pays" class="form-select">
            <option value="">-- Choisir un pays --</option>
        </select>
    </div>
    <div>
    </div>
</form>
